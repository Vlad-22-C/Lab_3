<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="800">
    <Grid>
        <TextBox Name="ChatTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760"/>
        <TextBox Name="RecipientTextBox" HorizontalAlignment="Left" Margin="10,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" Height="30"/>
        <TextBox Name="MessageTextBox" HorizontalAlignment="Left" Margin="10,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" Height="30"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="10,400,0,0" VerticalAlignment="Top" Width="760" Height="30" Click="SendButton_Click"/>
    </Grid>
</Window>
